.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.flag-button {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  position: relative;
}
.flag-button-img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  transition: all 2s;
}
.input-box {
  position: relative;
  flex: 1;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #7D7D7D;
  font-size: 26rpx;
  background: #f6f6f6;
  border-radius: 64rpx;
}
.image {
  width: 30rpx;
  height: 30rpx;
  margin: auto 20rpx;
}
.clear {
  width: 30rpx;
  height: 30rpx;
}
.input {
  flex: 1;
  height: 100%;
}
.search-container {
  width: 100%;
  flex: 1;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.list {
  height: 88rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(43,36,36,1);
  border-bottom: 1rpx solid rgba(239,239,239,1)
}
.active {
  color: #BE4C4B;
}
.sort {
  padding: 10rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
  font-size: 22rpx;
  border-radius: 10rpx;
}
.enter {
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
.model {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 10;
  background: rgba(0, 0, 0, .2);
}
.content {
  width: 60%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 50%);
  padding: 30rpx;
  border-radius: 10rpx;
  background: #fff;
}
.title {
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
}
.des {
  margin-top: 20rpx;
  text-indent: 30rpx;
  font-size: 24rpx;
}
.promotion {
  margin-top: 20px;
  font-size: 26rpx;
  font-weight: 500;
}
.require {
  text-indent: 30rpx;
  line-height: 32rpx;
  font-size: 22rpx;
}

.close-content {
  margin: 50rpx auto 0 auto;
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 56rpx;
  color: #fff;
  font-size: 24rpx;
}

.fixed-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  height: 98rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e6e6e6;
  background: #fff;
}
.flag, .rubbish {
  height: 100%;
  line-height: 98rpx;
  flex: 1;
  text-align: center;
  position: relative;
  font-size: 24rpx;
}
.flag.active, .rubbish.active {
  color: #BE4C4B;
}
.login-button {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1;
  opacity: 0;
}

