.input-box {
  position: relative;
  width: 100%;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #7D7D7D;
  font-size: 26rpx;
  background: #f6f6f6;
  border-radius: 64rpx;
}
.image {
  width: 30rpx;
  height: 30rpx;
  margin: auto 20rpx;
}
.clear {
  width: 30rpx;
  height: 30rpx;
}
.input {
  flex: 1;
  height: 100%;
}
.search-container {
  width: 100%;
  flex: 1;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.list {
  height: 88rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(43,36,36,1);
  border-bottom: 1rpx solid rgba(239,239,239,1)
}
.active {
  color: #BE4C4B;
}
.sort {
  padding: 10rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
  font-size: 22rpx;
  border-radius: 10rpx;
}
.enter {
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}